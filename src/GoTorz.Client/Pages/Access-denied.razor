@page "/access-denied"

<div class="text-center mt-5">
    <h1 class="text-danger">403 - Access denied</h1>
    <p class="lead">You dont have the necessary permission to this page. </p>
    <button class="btn btn-secondary mt-3" @onclick="NavigateHome">← Frontpage</button>
</div>

@code {
    [Inject]
    private NavigationManager Navigation { get; set; }

    private void NavigateHome()
    {
        Navigation.NavigateTo("/");
    }
}