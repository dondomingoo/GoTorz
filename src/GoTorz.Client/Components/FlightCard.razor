@using GoTorz.Client.Models.UIContracts

@if (Flight != null)
{
    <div class="card p-3 shadow-sm mb-3">
        <p><strong>Flight:</strong> @Flight.FlightNumber</p>
        <p><strong>From:</strong> @Flight.Departure</p>
        <p><strong>To:</strong> @Flight.Destination</p>
        <p><strong>Departure:</strong> @Flight.DepartureTime.ToString("dd.MM.yyyy HH:mm")</p>
        <p><strong>Arrival:</strong> @Flight.ArrivalTime.ToString("dd.MM.yyyy HH:mm")</p>
    </div>
}

@code {
    /// <summary>
    /// A flight object to display, supports both DTOs and models via interface.
    /// </summary>
    [Parameter] public IFlightInfo? Flight { get; set; }
}
