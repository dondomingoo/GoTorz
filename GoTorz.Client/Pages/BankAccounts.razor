@page "/bankaccounts"
@inject HttpClient Http
@inject LocalStorage LocalStorage
@inject AuthService AuthService
@inject NavigationManager Navigation
@using Shared

<h3>Bank Accounts</h3>

@if (accounts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <ul>
        @foreach (var acc in accounts)
        {
            <li>@acc.Owner: @acc.Balance DKK</li>
        }
    </ul>
}

@code {
    private List<BankAccount> accounts;

    protected override async Task OnInitializedAsync()
    {
        var request = await AuthService.CreateAuthorizedRequest(HttpMethod.Get, "api/bankaccount");
        
        if (request == null)
        {
            // Show a friendly message, or redirect to /login
            Navigation.NavigateTo("/login");
            return;
        }
               
        var response = await Http.SendAsync(request);

        if (response.IsSuccessStatusCode)
        {
            accounts = await response.Content.ReadFromJsonAsync<List<BankAccount>>();
        }
        else
        {
            // Handle unauthorized or other errors
        }
    }
}
